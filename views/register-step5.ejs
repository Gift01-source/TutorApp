<!doctype html><html><head>...</head><body class="bg-gray-900 text-white p-4">
  <div class="max-w-md mx-auto bg-gray-800 p-6 rounded">
    <h2>Preferences</h2>
    <% if (error) { %><div class="bg-red-600 p-2 rounded mb-3"><%= error %></div><% } %>
    <form action="/register-step5" method="POST">
      <input name="name" placeholder="Display name (optional)" class="w-full p-2 rounded mb-3">
      <select name="preferredGender" required class="w-full p-2 rounded mb-3">
        <option value="">Preferred gender</option>
        <option value="women">Women</option>
        <option value="men">Men</option>
        <option value="everyone">Everyone</option>
      </select>
      <button type="submit" class="w-full bg-indigo-600 p-3 rounded">Finish</button>
    </form>
  </div>
</body></html>