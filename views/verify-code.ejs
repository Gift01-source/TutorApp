  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="min-h-screen flex items-center justify-center bg-gradient-to-b from-pink-100 via-pink-200 to-pink-300">
  <div class="bg-white rounded-2xl shadow-lg p-8 w-full max-w-sm text-center">
    <h1 class="text-3xl font-bold text-pink-600 mb-2">ðŸ’– PaKoNa Meet</h1>
    <p class="text-gray-500 mb-6">Enter your verification code</p>
    <% if (error) { %>
      <div class="bg-yellow-100 text-yellow-700 p-2 rounded mb-3 text-sm"><%= error %></div>
    <% } %>

    <form method="POST" action="/verify-code" class="space-y-4 text-left">
      <div>
        <label class="block text-sm font-medium text-gray-600 mb-1" for="code">Verification Code</label>
        <input name="code" id="code" type="text" inputmode="numeric" placeholder="6-digit code" required maxlength="6"
          class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-pink-400 focus:outline-none text-center" />
      </div>
      <div class="flex gap-2">
        <button type="submit" class="flex-1 bg-pink-500 text-white font-semibold py-3 rounded-xl shadow-md hover:bg-pink-600 transition">Verify</button>
        <form method="POST" action="/resend-code" class="m-0">
          <button type="submit" class="bg-gray-300 text-gray-700 font-semibold py-3 rounded-xl shadow hover:bg-gray-400 transition">Resend</button>
        </form>
      </div>
    </form>
  </div>
</body>
</html>