
<div class="fixed inset-0 flex flex-col bg-gray-50">
  
  <!-- Header -->
  <div class="bg-white shadow px-4 py-3 flex flex-col items-center">
    <h2 class="text-2xl font-bold text-center text-indigo-600">
      Chat with <%= otherUser.name %>
    </h2>

    <!-- Audio/Video Call Buttons -->
    <div class="flex justify-center gap-6 mt-2">
      <button onclick="startAudioCall()" 
        class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-lg shadow">
        ðŸŽ§ Audio
      </button>
      <button onclick="startVideoCall()" 
        class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg shadow">
        ðŸŽ¥ Video
      </button>
    </div>
  </div>

  <!-- Chat Messages -->
  <div id="chat-box" class="flex-1 overflow-y-auto bg-white text-gray-800 p-4">
    <% messages.forEach(msg => { %>
      <div class="<%= (msg.sender.toString() === user._id.toString()) ? 'text-right' : 'text-left' %> mb-2">
        <div class="inline-block max-w-xs px-4 py-2 rounded-lg 
          <%= (msg.sender.toString() === user._id.toString()) ? 'bg-indigo-500 text-white' : 'bg-gray-200' %>">
          <strong class="block text-xs mb-1">
            <%= (msg.sender.toString() === user._id.toString()) ? "You" : otherUser.name %>
          </strong>
          <%= msg.text %>
        </div>
      </div>
    <% }) %>
  </div>

  <!-- Input Area -->
  <form method="POST" action="/messages" class="bg-white p-3 flex items-center gap-2 border-t">
    <input type="text" name="text" placeholder="Type a message..." required
      class="flex-1 px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-500"/>
    <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700">
      Send
    </button>
  </form>

</div>

<script>
  function startAudioCall() {
    alert('Audio call functionality coming soon!');
  }
  function startVideoCall() {
    alert('Video call functionality coming soon!');
  }
  const chatBox = document.getElementById('chat-box');
  chatBox.scrollTop = chatBox.scrollHeight;
</script>
