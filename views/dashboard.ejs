<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Your Dashboard</title>
  <style>
    .user-item {
      position: relative;
      padding-left: 20px;
      display: inline-block; /* inline for dot positioning */
    }

    .user-item.online::before {
      content: '';
      position: absolute;
      left: 0;
      top: 50%;
      transform: translateY(-50%);
      width: 10px;
      height: 10px;
      background-color: #22c55e; /* Tailwind green-500 */
      border-radius: 50%;
      box-shadow: 0 0 5px #22c55e88;
    }
  </style>

  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
  <script src="/socket.io/socket.io.js"></script>
</head>
<body class="bg-gray-900 text-white">

  <!-- Navbar -->
  <nav class="bg-indigo-600 p-4 flex justify-between items-center">
    <div class="text-xl font-bold">PaKoNa Meet</div>
    <button id="menu-btn" class="text-2xl md:hidden">â˜°</button>
    <ul id="menu" class="hidden md:flex space-x-6">
      <li><a href="/dashboard" class="hover:underline">Matches</a></li>
      <li><a href="/chat/list" class="hover:underline">Chats</a></li>
      <li><a href="/likes" class="hover:underline">Likes</a></li>
    </ul>
  </nav>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden bg-gray-800 p-4 md:hidden">
    <a href="/profile1" class="block py-2 hover:underline">Profile</a>
    <a href="/settings" class="block py-2 hover:underline">Settings</a>
    <a href="/premium" class="block py-2 hover:underline">Premium</a>
    <a href="/privacy" class="block py-2 hover:underline">Privacy</a>
    <a href="/logout" class="block py-2 hover:underline text-red-400">Logout</a>
  </div>

  <!-- Bottom Navigation for Mobile -->
  <nav class="fixed bottom-0 left-0 w-full bg-gray-800 border-t border-gray-700 md:hidden">
    <div class="flex justify-around items-center text-sm">
      <a href="/matches" class="flex flex-col items-center p-2 text-gray-400 hover:text-white">
        <i class="fas fa-user-friends text-lg"></i>
        Matches
      </a>
      <a href="/chat/list" class="flex flex-col items-center p-2 text-gray-400 hover:text-white">
        <i class="fas fa-comments text-lg"></i>
        Chats
      </a>
      <a href="/likes" class="flex flex-col items-center p-2 text-gray-400 hover:text-white">
        <i class="fas fa-heart text-lg"></i>
        Likes
      </a>
      <a href="/profile1" class="flex flex-col items-center p-2 text-gray-400 hover:text-white">
        <i class="fas fa-user text-lg"></i>
        Profile
      </a>
    </div>
  </nav>

  <!-- User Cards -->
  <div class="p-4 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% users.forEach(user => { %>
      <div class="bg-gray-800 rounded-lg shadow-lg p-4 text-center relative">
        <img src="/public/uploads/<%= user.photo || '' %>" alt="<%= user.name %>" 
          class="w-24 h-24 object-cover rounded-full mx-auto border-4 border-indigo-500"/>
        <h2 class="mt-4 text-lg font-semibold">
          <span>
            <%= user.name %>
          </span>
        </h2>
        <p class="text-sm text-gray-400"><strong>Bio:</strong><%= user.bio %></p>
        <p class="text-sm text-gray-400"><strong>Gender:</strong><%= user.gender%></p>
        <p class="text-sm text-gray-400"><strong>Age:</strong><%= user.age %></p>
        <p class="text-sm text-gray-400"><strong>interests:</strong><%= user.interests %></p>
        <p class="text-sm text-gray-400"><strong>Location:</strong><%= user.location %>Kms</p>
        <div class="flex justify-center gap-4 mt-4">
          <a href="/like/<%= user._id %>" class="bg-green-500 px-2 py-0 rounded hover:bg-red-500 flex items-center gap-1" title="Like">
            <i class="fas fa-heart">Like</i>
          </a>
          <a href="/chat/<%= user._id %>" class="bg-green-500 px-2 py-2 rounded hover:bg-green-400 flex items-center gap-2" title="Message">
            <i class="fas fa-comment"></i> Message
          </a>
          <a href="/profile<% user._id %>" class="bg-pink-500 px-2 py-2 rounded hover:bg-pink-400 flex items-center gap-2" title="Message">
            <i class="fas fa-user"></i> View
          </a>
        </div>
      </div>
    <% }) %>
  </div>

