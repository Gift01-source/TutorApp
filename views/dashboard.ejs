<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>PaKoNa Meet - Dashboard</title>

  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
  <script src="/socket.io/socket.io.js"></script>

  <style>
    .user-item {
      position: relative;
      padding-left: 20px;
      display: inline-block;
    }

    .user-item.online::before {
      content: '';
      position: absolute;
      left: 0;
      top: 50%;
      transform: translateY(-50%);
      width: 10px;
      height: 10px;
      background-color: #22c55e;
      border-radius: 50%;
      box-shadow: 0 0 5px #22c55e88;
    }

    /* Simple animation */
    .card-hover:hover {
      transform: scale(1.03);
      transition: transform 0.2s ease-in-out;
    }
  </style>
</head>
<body class="bg-gradient-to-b from-purple-900 via-gray-900 to-black text-white min-h-screen">

  <!-- Navbar -->
  <nav class="bg-pink-600 p-4 flex justify-between items-center shadow-lg">
    <div class="text-xl font-bold">❤️ PaKoNa Meet</div>
    <button id="menu-btn" class="text-3xl md:hidden focus:outline-none">☰</button>
    <ul id="menu" class="hidden md:flex space-x-6 text-white font-medium">
      <li><a href="/dashboard" class="hover:text-yellow-300">Matches</a></li>
      <li><a href="/chat/list" class="hover:text-yellow-300">Chats</a></li>
      <li><a href="/likes" class="hover:text-yellow-300">Likes</a></li>
    </ul>
  </nav>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden bg-gray-800 p-4 md:hidden space-y-2">
    <a href="/profile1" class="block hover:text-pink-400">Profile</a>
    <a href="/settings" class="block hover:text-pink-400">Settings</a>
    <a href="/premium" class="block hover:text-pink-400">Premium</a>
    <a href="/privacy" class="block hover:text-pink-400">Privacy</a>
    <a href="/logout" class="block text-red-400 hover:text-red-300">Logout</a>
  </div>

  <!-- User Cards -->
  <div class="p-4 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mt-4">
    <% users.forEach(user => { %>
      <div class="bg-gray-800 rounded-xl shadow-lg p-6 text-center card-hover relative transition-all">
        <img src="/public/uploads/<%= user.photo || '' %>" alt="<%= user.name %>" 
          class="w-28 h-28 object-cover rounded-full mx-auto border-4 border-pink-500 shadow-lg"/>
        <h2 class="mt-4 text-xl font-semibold text-pink-300"><%= user.name %></h2>
        <p class="text-sm text-gray-400 mt-1 italic"><%= user.bio %></p>

        <div class="mt-3 text-sm text-gray-300 space-y-1">
          <p><strong>Gender:</strong> <%= user.gender %></p>
          <p><strong>Age:</strong> <%= user.age %></p>
          <p><strong>Interests:</strong> <%= user.interests %></p>
          <p><strong>Location:</strong> <%= user.location %> km</p>
        </div>

        <div class="flex justify-center gap-3 mt-5">
          <button 
     onclick="likeUser('<%= user._id %>', this)" 
     class="like-btn bg-green-500 px-2 py-1 rounded hover:bg-red-500 flex items-center gap-1 text-sm font-semibold">
  ❤️ Like
   </button>
          <a href="/chat/<%= user._id %>" class="bg-blue-500 px-3 py-1 rounded-full hover:bg-blue-400 flex items-center gap-1 text-sm font-semibold">
            <i class="fas fa-comment"></i> Message
          </a>
          <a href="/profile/<%= user._id %>" class="bg-purple-600 px-3 py-1 rounded-full hover:bg-purple-500 flex items-center gap-1 text-sm font-semibold">
            <i class="fas fa-user"></i> View
          </a>
        </div>
      </div>
    <% }) %>
  </div>

  <!-- Mobile Bottom Nav -->
  <nav class="fixed bottom-0 left-0 w-full bg-gray-900 border-t border-gray-700 md:hidden z-50">
    <div class="flex justify-around items-center text-sm text-gray-400">
      <a href="/matches" class="flex flex-col items-center p-2 hover:text-white">
        <i class="fas fa-user-friends text-lg"></i>
        Matches
      </a>
      <a href="/chat/list" class="flex flex-col items-center p-2 hover:text-white">
        <i class="fas fa-comments text-lg"></i>
        Chats
      </a>
      

      <a href="/profile" class="flex flex-col items-center p-2 hover:text-white">
        <i class="fas fa-user text-lg"></i>
        Profile
      </a>
    </div>
  </nav>

  <!-- Scripts -->
  <script>
    const socket = io();

    document.addEventListener('DOMContentLoaded', () => {
      const menuBtn = document.getElementById('menu-btn');
      const mobileMenu = document.getElementById('mobile-menu');

      if (menuBtn && mobileMenu) {
        menuBtn.addEventListener('click', () => {
          mobileMenu.classList.toggle('hidden');
        });
      }
    });

    // Online user tracking (if enabled)
    socket.emit('userOnline', userId);

    socket.on('onlineUsers', (onlineUsers) => {
      document.querySelectorAll('.user-item').forEach(userElem => {
        const id = userElem.dataset.userid;
        if (onlineUsers.includes(id)) {
          userElem.classList.add('online');
        } else {
          userElem.classList.remove('online');
        }
      });
    });

    //like
  function likeUser(userId, btn) {
    fetch(`/like/${userId}`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      }
    })
    .then(async res => {
      const data = await res.json();
      if (res.ok) {
        btn.innerHTML = '✅ Liked';
        btn.disabled = true;
        btn.classList.remove('bg-green-500');
        btn.classList.add('bg-gray-500');
      } else {
        alert(data.message || 'Failed to like');
      }
    })
    .catch(err => {
      console.error(err);
      alert('Error liking user');
    });
  }


  </script>
</body>
</html>
